const team = [
  {
    name: 'John Smith',
    role: 'CEO & Founder',
    image: '/team/john.jpg',
    bio: 'With over 10 years of experience in web development, John leads our team with passion for creating exceptional digital experiences.',
    social: {
      linkedin: '#',
      twitter: '#',
      github: '#'
    }
  },
  {
    name: 'Sarah Johnson',
    role: 'Lead Developer',
    image: '/team/sarah.jpg',
    bio: 'Sarah is our technical lead, specializing in modern web technologies and ensuring our projects meet the highest standards.',
    social: {
      linkedin: '#',
      twitter: '#',
      github: '#'
    }
  },
  {
    name: 'Mike Chen',
    role: 'Design Director',
    image: '/team/mike.jpg',
    bio: 'Mike brings creativity and user-centered design thinking to every project, creating beautiful and functional interfaces.',
    social: {
      linkedin: '#',
      twitter: '#',
      github: '#'
    }
  }
];

const values = [
  {
    title: 'Innovation',
    description: 'We embrace new technologies and creative solutions to solve complex problems.',
    icon: 'üí°'
  },
  {
    title: 'Quality',
    description: 'We deliver high-quality work that exceeds expectations and stands the test of time.',
    icon: '‚≠ê'
  },
  {
    title: 'Collaboration',
    description: 'We work closely with our clients to understand their needs and achieve their goals.',
    icon: 'ü§ù'
  },
  {
    title: 'Transparency',
    description: 'We believe in open communication and honest relationships with our clients.',
    icon: 'üîç'
